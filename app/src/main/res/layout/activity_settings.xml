<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB484D6C"
    tools:context=".MainActivity">

    <com.github.anderesu.widget.DiscreteSeekBar
        android:id="@+id/discreteSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsb_min="0"
        app:dsb_max="100"
        app:dsb_value="50"
        app:dsb_trackHeight="4dp"
        app:dsb_thumbSize="20dp"
        app:dsb_thumbColor="@color/colorPrimary"
        app:dsb_trackColor="@color/colorAccent"
        app:dsb_indicatorColor="@color/colorPrimaryDark"
        app:dsb_indicatorTextColor="@android:color/white"
        app:dsb_indicatorTextSize="14sp"
        app:dsb_indicatorEnabled="true" />




</RelativeLayout>